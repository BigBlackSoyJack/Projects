//This program prints numbers in a pyramidal order
int n = int.Parse(Console.ReadLine());                        
int currentnum = 1;
for (int i = 1; i <= n; i++)
{
    for (int j = 1; j <= i; j++)
    {
        Console.Write($"{currentnum} " );
        currentnum++;
        if (currentnum > n)
        {
            break;
        }
    }
    Console.WriteLine();
    if (currentnum > n)
    {
        break;
    }
}
